<div class="d-flex justify-content-center align-items-center">
  <h1 class="text-center">Productos</h1>
  <a href="/carts/{{cartId}}" class="ms-5">
    <i class="bi bi-cart cart-icon"></i>
  </a>
  
</div>
<div class="container">
    <div class="row">
        {{#each productos}}
        <div class="card col-xl-4 col-md-6 col-sm-12">
            <img src="{{img}}" alt="" class="card-img-top">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{description}}</p>
                <p class="card-text">Price: ${{price}}</p>
                <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST">
                    <button class="btnMios" type="submit">Agregar al Carrito</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>





<div class="container mt-3">
    <div class="d-flex justify-content-center text-center"> <!-- Centra los enlaces horizontalmente -->
        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}" class="mx-2"> <button class="btn btn-danger"> Anterior </button> </a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}" class="mx-2"> <button class="btn btn-danger"> Siguiente </button> </a>
        {{/if}}
    </div>
    <p class="p">Pagina {{currentPage}} de {{totalPages}} </p>
</div>